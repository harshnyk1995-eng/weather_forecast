<%= render "shared/flash" %>

<h1>Forecast</h1>

<%= form_with(method: 'get', local: true) do %>
    <%= label :address, "Enter your address" %><br>
    <%= text_field_tag(:address, @address || @address_default, size: 70) %><br>
    <%= submit_tag("Lookup") %>
<% end %>

<% if defined?(@weather) %>
    <ul>
        <li>Temperature: <%= @weather[:temp] %> ℃</li>
        <li>Temperature Minimum: <%= @weather[:temp_min] %> ℃</li>
        <li>Temperature Maximum: <%= @weather[:temp_max] %> ℃</li>
        <li>Description: <%= @weather[:description] %></li>
        <li>Is this result from the cache? <%= @weather_cache_exist %>
    </ul>
<% end %>